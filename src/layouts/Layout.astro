---
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body data-theme="light">
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global>
  :root {
    --max-width: 1100px;
    --border-radius: 12px;
    --font-mono: ui-monospace, Menlo, Monaco, "Cascadia Mono", "Segoe UI Mono",
      "Roboto Mono", "Oxygen Mono", "Ubuntu Monospace", "Source Code Pro",
      "Fira Mono", "Droid Sans Mono", "Courier New", monospace;

    --r-black: #171219;
    --r-azure: #f0ffff;
    --r-orange: #f18f01;
    --r-white: #fff;
    --r-antiquewhite: #faebd7;
    --r-ocean: #bdc7f0;
  }

  [data-theme="light"] {
    --r-bg: var(--r-azure);
    --r-fg: var(--r-black);
    --r-border: var(--r-black);
    --r-primary: var(--r-orange);
    --r-secondary: var(--r-ocean);
    --r-accent: var(--r-antiquewhite);
  }

  [data-theme="dark"] {
    --r-bg: var(--r-black);
    --r-fg: var(--r-azure);
    --r-border: var(--r-azure);
    --r-primary: var(--r-orange);
    --r-secondary: var(--r-antiquewhite);
    --r-accent: var(--r-antiquewhite);
  }

  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }

  body {
    min-height: 100vh;
    color: var(--r-fg);
    background: var(--r-bg);
    font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen,
      Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif;
  }

  main {
    margin: 76px auto 0 auto;
    padding: 1.5rem;
    max-width: 60ch;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  @media (prefers-color-scheme: dark) {
    html {
      color-scheme: dark;
    }
  }

  .feed {
    scroll-margin-top: 100px;
    position: relative;
    width: 100%;
    padding: 1.25rem 1.75rem;
    background: var(--r-bg);
    border: thin solid var(--r-border);
  }
  .feed:hover {
    --scale-x: 1.0035;
    --scale-y: 1.0035;
    transform: scale(1.0035, 1.0035);
  }
  .feed[data-order="top"],
  .feed[data-order="middle"] {
    border-bottom: none;
  }
  .feed[data-order="middle"],
  .feed[data-order="last"] {
    border-top: thin dashed var(--r-border);
  }

  .feed .feed-data {
    margin-bottom: 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .feed .parent {
    color: var(--r-primary);
    font-family: monospace;
    font-size: 0.875rem /* 14px */;
    line-height: 1.25rem /* 20px */;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .feed .parent:hover {
    text-decoration: underline;
  }

  .feed h3 {
    font-family: monospace;
    font-size: 0.875rem /* 14px */;
    line-height: 1.25rem /* 20px */;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .feed h3 > b {
    padding: 2px;
    font-weight: 700;
    color: var(--r-black);
    background: var(--r-primary);
  }

  .feed .feed-meta {
    display: flex;
    justify-content: space-between;
    font-family: monospace;
    font-size: 0.875rem /* 14px */;
    line-height: 1.25rem /* 20px */;
  }

  .feed time {
    color: var(--r-secondary);
  }

  .feed .tag-list {
    display: flex;
    gap: 0.5rem;
  }
</style>
